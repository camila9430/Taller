        <Label Grid.Row="0" Grid.Column="1" Text="Usuario"/>
        <Label Grid.Row="0" Grid.Column="2" Text=""/>
        
        <Label Grid.Row="1" Grid.Column="1" Text="Descripcion"/>
        <Label Grid.Row="1" Grid.Column="2" Text=""/>
        
        <Label Grid.Row="2" Grid.Column="1" Text="MeGusta"/>
        <Label Grid.Row="2" Grid.Column="2" Text=""/>
        
        <Label Grid.Row="3" Grid.Column="1" Text="MeDisgusta"/>
        <Label Grid.Row="3" Grid.Column="2" Text=""/>
        
        <Label Grid.Row="4" Grid.Column="1" Text="VecesCompartido"/>
