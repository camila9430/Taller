<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerXamarin.view.Ingreso">
             
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="black" Padding="20">
            <Label Text="Atlético Nacional" 
               FontSize="50"
               TextColor="white"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Image Source="Nacional.png"/>
            <Button Text="Click aquí" 
                FontSize="30"
                TextColor="white"  
                BackgroundColor="Green"
                Clicked="Ingreso_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>